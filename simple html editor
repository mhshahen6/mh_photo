<body>

  <header>
    <h1>محرر HTML بسيط مع كاشف أخطاء أساسي</h1>
    <div class="buttons">
      <button id="runBtn">تشغيل ←</button>
      <button id="fixBtn">إصلاح تلقائي</button>
      <button id="clearBtn">مسح الكل</button>
    </div>
  </header>

  <div class="container">
    
    <!-- منطقة الكود -->
    <div class="editor-section">
      <div class="section-header">اكتب أو الصق كود HTML هنا</div>
      <textarea id="codeEditor" spellcheck="false"><!DOCTYPE html>
<html lang="ar">
<head>
  <meta charset="UTF-8">
  <title>صفحتي الأولى</title>
</head>
<body>
  <h1>مرحباً بالعالم!</h1>
  <p>هذا نص تجريبي...</p>
</body>
</html></textarea>
    </div>

    <!-- منطقة المعاينة -->
    <div class="preview-section">
      <div class="section-header">المعاينة المباشرة</div>
      <div id="errorPanel"></div>
      <iframe id="previewFrame"></iframe>
    </div>

  </div>

  <script>
    const editor = document.getElementById('codeEditor');
    const preview = document.getElementById('previewFrame');
    const errorPanel = document.getElementById('errorPanel');

    // تشغيل الكود
    function runCode() {
      const code = editor.value;
      errorPanel.style.display = 'none';
      errorPanel.innerHTML = '';

      try {
        // محاولة كشف بعض الأخطاء الشائعة قبل التشغيل
        let fixedCode = basicFix(code);

        // إنشاء صفحة كاملة داخل iframe
        const fullHtml = `
          <!DOCTYPE html>
          <html dir="rtl" lang="ar">
          <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <style>body {font-family: system-ui, sans-serif; padding: 20px;}</style>
          </head>
          <body>${fixedCode}</body>
          </html>`;

        preview.srcdoc = fullHtml;

        // محاولة كشف أخطاء بسيطة بعد التحميل
        preview.onload = () => {
          try {
            const doc = preview.contentDocument || preview.contentWindow.document;
            if (!doc.body.innerHTML.trim()) {
              showError("المحتوى فارغ أو غير صحيح");
            }
          } catch (e) {
            showError("حدث خطأ أثناء عرض الصفحة");
          }
        };

      } catch (err) {
        showError(err.message);
      }
    }

    // تصحيحات تلقائية بسيطة
    function basicFix(code) {
      let fixed = code;

      // إغلاق العناصر الشائعة تلقائياً إذا نسي المستخدم
      fixed = fixed.replace(/<p>(.+?)(?=<|$)/g, '<p>$1</p>');
      fixed = fixed.replace(/<h1>(.+?)(?=<|$)/g, '<h1>$1</h1>');
      fixed = fixed.replace(/<h2>(.+?)(?=<|$)/g, '<h2>$1</h2>');
      fixed = fixed.replace(/<div>(.+?)(?=<|$)/g, '<div>$1</div>');

      // إضافة doctype إذا لم يكن موجوداً
      if (!fixed.trim().toLowerCase().startsWith('<!doctype')) {
        fixed = '<!DOCTYPE html>\n' + fixed;
      }

      return fixed;
    }

    function showError(message) {
      errorPanel.innerHTML = `خطأ: ${message}<br>حاول التحقق من إغلاق العناصر أو كتابة الكود بشكل صحيح.`;
      errorPanel.style.display = 'block';
    }

    // الأحداث
    document.getElementById('runBtn').onclick = runCode;
    document.getElementById('fixBtn').onclick = () => {
      editor.value = basicFix(editor.value);
      runCode();
    };
    document.getElementById('clearBtn').onclick = () => {
      if (confirm('هل أنت متأكد من مسح الكود؟')) {
        editor.value = '';
        preview.srcdoc = '<h2 style="text-align:center; color:#999; margin-top:100px;">اكتب كود HTML واضغط تشغيل</h2>';
        errorPanel.style.display = 'none';
      }
    };

    // تشغيل أولي
    runCode();
  </script>

</body>
</html>
